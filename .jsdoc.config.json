{
    "recurseDepth": 10,
    "source": {
        "include": [
            "src"
        ],
        "exclude": [
            "src/data"
        ],
        "includePattern": ".+\\.js(doc|x)?$",
        "excludePattern": "node_modules"
    },
    "sourceType": "module",
    "tags": {
        "allowUnknownTags": true,
        "dictionaries": [
            "jsdoc",
            "closure"
        ]
    },
    "plugins": [
        "plugins/markdown",
        "node_modules/better-docs/category"
    ],
    "opts": {
        "destination": "./docs",
        "recurse": true,
        "template": "node_modules/better-docs"
    },
    "templates": {
        "better-docs": {
            "name": "ITC Utility Package Documentation",
            "categories": [
                {
                    "title": "Hooks",
                    "tags": [
                        "Hooks"
                    ]
                }
            ]
        }
    }
}